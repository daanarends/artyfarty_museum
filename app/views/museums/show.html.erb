<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @museum.name %>
</p>

<h4>List of Art</h4>

<% if @museum.arts.any? %>
  <ul>
    <% @museum.arts.each do |art| %>
      <li><%= art.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There is not art in this museum.</p>
<% end %>

<%= link_to 'Edit', edit_museum_path(@museum) %> |
<%= link_to 'Back', museum_path %>
