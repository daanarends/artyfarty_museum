<head>
  <link rel="stylesheet" type="text/scss" href="/Documents/beginner-bootcamp/hackuthon/app/assets/stylesheets/museums.scss">
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
</head>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @museum.name %>
</p>
<hr/>
<h3>List of Art</h3>
<br/>

<% if @museum.arts.any? %>
    <% @museum.arts.each do |art| %>
      <p><%= art.name %></p>
    <% end %>
<% else %>
  <p>There is no art in this museum.</p>
<% end %>
<br/>
<hr/>
<footer class="Footie">
<%= link_to 'Edit', edit_museum_path(@museum) %> |
<%= link_to 'Back', museums_path(@museum) %>
<br/>
</footer>
